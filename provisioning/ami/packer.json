{
  "description": "hakaru app",

  "variables": {
    "ARTIFACTS_COMMIT": ""
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "ap-northeast-1",

      "ami_name": "hakaru - {{isotime \"20060102150405\"}}",
      "ami_description": "hakaru application instance image",
      "ami_users": [
        "{{user `AWS_ACCOUNT_ID_ACS`}}"
      ],
      "tags": {
        "Name": "hakaru - {{isotime \"20060102150405\"}}",
        "SourceAMI": "{{ .SourceAMI }}",
        "SourceAMIName": "{{ .SourceAMIName }}"
      },
      "source_ami": "ami-08847abae18baa040",

      "subnet_id": "subnet-0ecb2e120ef986658",
      "security_group_id": "sg-0764c0aec74741fc7",
      "associate_public_ip_address": true,
      "ssh_username": "ec2-user",
      "ssh_interface": "public_ip",
      "instance_type": "t3.micro",
      "sriov_support": true,
      "ena_support": true,
      "user_data_file": "{{template_dir}}/scripts/cloud.cfg.d/99_defaults.cfg"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
      ]
    },

    {
      "type": "file",
      "source": "{{template_dir}/scripts.tgz",
      "destination": "/var/tmp/scripts.tgz"
    },
    {
      "type": "shell",
      "environment_vars": [
        "ARTIFACTS_COMMIT={{user `ARTIFACTS_COMMIT`}}"
      ],
      "inline": [
        "tar xvzf /var/tmp/scripts.tgz -C /home/ec2-user/deployment",
        "sudo make -C /var/tmp/scripts"
      ]
    }
  ],

  "post-processors": []
}
